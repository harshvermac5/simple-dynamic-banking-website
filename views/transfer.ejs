<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transfer Money</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <div class="max-w-3xl mx-auto p-4">
        <div class="flex place-content-between">
        <h1 class="text-2xl font-bold mb-4">Transfer Money from <%= customer.name %></h1>
        <a href="/customers" class="text-blue-500 hover:underline block pt-2">
            Back to Customers
        </a>
        </div>
        <form action="/transfer" method="POST">
            <input type="hidden" name="fromId" value="<%= customer._id %>">
            <label for="toId" class="block mb-2">Select Customer to Transfer To:</label>
            <select name="toId" class="w-full p-2 border rounded">
                <% otherCustomers.forEach(c => { %>
                    <option value="<%= c._id %>"><%= c.name %></option>
                <% }); %>
            </select>
            <label for="amount" class="block mt-4 mb-2">Amount:</label>
            <input type="number" name="amount" min="0" required
                   class="w-full p-2 border rounded">
            <button type="submit" class="mt-4 bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
                Transfer
            </button>
        </form>
    </div>
</body>
</html>
